extends layout 

block content 

    h1=title    

    h3 #{user.full_name}

    h4 Member status: #{user.membership_status}
    h4 Admin status: #{user.admin}
    hr
    if (!user.membership_status)
        a(href=`/${user._id}/secret-password`) Join the club 

    if (!user.admin)
        a(href=`/${user._id}/admin`) Enter admin pin
